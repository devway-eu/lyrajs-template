{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@controller/*": [
        "./src/controller/*"
      ],
      "@fixtures/*": [
        "./src/fixtures/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
      "@entity/*": [
        "./src/entity/*"
      ],
      "@repository/*": [
        "./src/repository/*"
      ],
      "@router/*": [
        "./src/router/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@tests/*": [
        "./src/tests/*"
      ],
      "@types/*": [
        "./src/types/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}